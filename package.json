{
  "name": "aternos-guard",
  "version": "1.0.0",
  "description": "24/7 Minecraft server uptime bot for Aternos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "postinstall": "node -e \"const fs=require('fs');fs.mkdirSync('node_modules/.bin',{recursive:true});fs.writeFileSync('node_modules/.bin/public','#!/usr/bin/env node\\nrequire(\\\"../../server.js\\\");\\n');try{fs.chmodSync('node_modules/.bin/public',0o755)}catch{};fs.writeFileSync('node_modules/.bin/public.cmd','@echo off\\r\\nnode \\\"%~dp0\\\\..\\\\..\\\\server.js\\\" %*\\r\\n');console.log('[postinstall] public shim ready');\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mineflayer": "^4.14.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
